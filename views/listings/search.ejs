<% layout("/layouts/boilerplate") %>

<style>
  .listing-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 16px;
    overflow: hidden;
    border: none;
  }

  .listing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .listing-card img {
    height: 240px;
    object-fit: cover;
    width: 100%;
  }

  .card-title {
    font-size: 1.2rem;
    font-weight: 600;
  }

  .card-text {
    font-size: 0.95rem;
  }

  .search-result-container {
    padding: 2rem 1rem;
  }

  .search-result-heading {
    font-size: 1.8rem;
    font-weight: bold;
  }

  @media (max-width: 576px) {
    .listing-card img {
      height: auto;
      max-height: 240px;
    }
  }
</style>

<div class="search-result-container container mt-5">
  <h2 class="search-result-heading mb-4">Search Results for "<%= q %>"</h2>

  <% if (foundListings.length === 0) { %>
    <div class="alert alert-warning">No listings found.</div>
  <% } else { %>
    <div class="row g-4">
      <% foundListings.forEach(listing => { %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="card listing-card shadow-sm h-100">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text text-muted mb-1"><i class="fa-solid fa-location-dot me-1"></i> <%= listing.location %></p>
              <p class="card-text"><%= listing.description.substring(0, 100) %>...</p>
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm mt-2">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
